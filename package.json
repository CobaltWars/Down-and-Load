{
  "name": "down-and-load",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.cobaltwars.down-and-load",
    
    "win": {
      "target": "nsis"
    },
    "mac": {
