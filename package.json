{
  "name": "down-and-load",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "build": {
    "appId": "com.cobaltwars.down-and-load",
    "productName": "Down&Load",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [{
      "provider": "github",
      "owner": "CobaltWars",
      "repo": "Down-and-Load"
    }]
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.1.1",
    "fs-extra": "latest",
    "p-queue": "latest",
    "ytdlp-nodejs": "latest"
  }
}