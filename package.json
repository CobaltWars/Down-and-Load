    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fs-extra": "latest",
    "p-queue": "latest",
    "ytdlp-nodejs": "latest"
  }
}
